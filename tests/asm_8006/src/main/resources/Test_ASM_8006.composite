<!-- 
Tests that when an <interface/> element of a <component/> <reference/> explicitly declares 
both a forward interface and a callback interface and the forward interface document also 
declares a callback interface, that the two callback interfaces are compatible
-->
<composite xmlns="http://docs.oasis-open.org/ns/opencsa/sca/200912"
           targetNamespace="http://docs.oasis-open.org/ns/opencsa/scatests/200903"
           xmlns:test="http://docs.oasis-open.org/ns/opencsa/scatests/200903"
           name="TEST_ASM_8006">
           
    <component name="TestClient">
		<implementation.composite name="test:TestClient_0002"/>
		<service name="TestInvocation">
			<interface.wsdl interface="http://test.sca.oasisopen.org/#wsdl.porttype(TestInvocation)"/>
            <binding.ws/>
		</service>
        <reference name="reference1" target="TEST_ASM_8006Component1/Service1" />
        <property name="testName">ASM_8006</property>
    </component>
    
    <!-- Component which has a service with an interface which is remotable and
         which has a reference which uses an interface with a callback -->
    <component name="TEST_ASM_8006Component1">
		<implementation.composite name="test:TestComposite60"/>
		<service name="Service1">
			<interface.wsdl interface="http://test.sca.oasisopen.org/#wsdl.porttype(Service1)"/>
		</service>
        <property name="serviceName">service1</property>
        <reference name="Reference1" target="TEST_ASM_8006Component2/Service1">
        	<!-- The callback interface here does not match the callback interface declared
        	     within the Service9 forward interface -->
        	<interface.wsdl interface="http://test.sca.oasisopen.org/#wsdl.porttype(Service9)"
			                callbackInterface="http://test.sca.oasisopen.org/#wsdl.porttype(Service8Callback)"/>        	
        </reference>
    </component> 
    
    <!-- Component with a service with an interface which is remotable and no references -->
    <component name="TEST_ASM_8006Component2">
		<implementation.composite name="test:TestComposite61"/>
		<service name="Service1">
		   	<!-- The callback interface here does not match the callback interface declared
        	     within the Service9 forward interface -->
			<interface.wsdl interface="http://test.sca.oasisopen.org/#wsdl.porttype(Service9)"
			                callbackInterface="http://test.sca.oasisopen.org/#wsdl.porttype(Service8Callback)"/>        				
		</service>
        <property name="serviceName">service2</property>
    </component> 
</composite>
